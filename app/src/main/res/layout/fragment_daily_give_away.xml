<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWindowBackground"
        android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?actionBarSize"
                    android:background="@drawable/bg_no_color_bottom_round_rec"
                    android:backgroundTint="#7270FF"
                    android:padding="@dimen/_22sdp"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.8">


                    <TextView
                        android:id="@+id/daily_give_away"
                        style="@style/TextStyleHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:letterSpacing="-0.01"
                        android:text="Daily Giveaway"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/daily_give_away_desc"
                        style="@style/TextStyle"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/daily_give_away"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Win upto $1000 in stock rewards. Enter now"
                        android:textColor="#75FFFFFF"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:backgroundTint="@color/colorWhite"
                            android:src="@drawable/ic_timer_off_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/robotomono_bold"
                            android:text="09h:23m:05s"

                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_minus15sdp"
                        android:src="@drawable/burger" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/daily_give_away_desc"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/text_enter"
                            style="@style/TextStyle.SemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="ENTER"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_13sdp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/text_to_enter"
                                style="@style/TextStyle.SemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:text="TO ENTER"
                                android:textColor="#85FFFFFF"
                                android:textSize="@dimen/_7sdp" />

                            <ImageView
                                android:id="@+id/ticket"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_below="@id/text_to_enter"
                                android:src="@drawable/ic_ticket_white" />

                            <TextView
                                android:id="@+id/text_ticket"
                                style="@style/TextStyle.SemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text_to_enter"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_toEndOf="@id/ticket"
                                android:text="23"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_11sdp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/text_prizes"
                                style="@style/TextStyle.SemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:text="PRIZES"
                                android:textColor="#85FFFFFF"
                                android:textSize="@dimen/_7sdp" />

                            <ImageView
                                android:id="@+id/money_icon"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_below="@id/text_prizes"
                                android:src="@drawable/ic_attach_money_white" />

                            <TextView
                                android:id="@+id/text_money"
                                style="@style/TextStyle.SemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text_prizes"
                                android:layout_marginStart="@dimen/_minus5sdp"
                                android:layout_toEndOf="@id/money_icon"
                                android:text="1000"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_11sdp" />


                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/layout_colored_title_toolbar" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/_13sdp"
                android:paddingEnd="@dimen/_13sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/bg_no_color_round_rec"
                    android:backgroundTint="@color/colorWhite"
                    android:padding="@dimen/_12sdp">

                    <ImageView
                        android:id="@+id/icon_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:src="@drawable/ic_link" />

                    <TextView
                        android:id="@+id/invite_link"
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_55sdp"
                        android:layout_toEndOf="@id/icon_bank"
                        android:singleLine="true"
                        android:hint="stockly.io/r/23439"
                        android:textColor="#92ACB5"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/share"
                        style="@style/TextStyleHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="SHARE"
                        android:textColor="#4098FF"
                        android:textSize="@dimen/_11sdp" />

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_no_color_round_rec"
                    android:backgroundTint="@color/colorWhite"
                    tools:listitem="@layout/daily_give_away_item" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/progress_bar"
            layout="@layout/layout_progress_bar" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>