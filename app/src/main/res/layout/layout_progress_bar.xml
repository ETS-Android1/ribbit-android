<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/bg_progress_bar"
        android:orientation="vertical">

        <ProgressBar
            android:translationZ="@dimen/_20sdp"
            android:id="@+id/view_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorBlack" />

        <TextView
            android:translationZ="@dimen/_20sdp"
            android:id="@+id/sr_number"
            style="@style/TextStyleHeading.Sub"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/loading"
            android:textColor="@color/colorBlack" />


    </LinearLayout>
</layout>